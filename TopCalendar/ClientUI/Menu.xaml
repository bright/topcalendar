<UserControl x:Class="ClientUI.Menu"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="720" Width="100" Background="#B0C4DE" BorderBrush="Black">
    <UserControl.Resources>
        <ResourceDictionary Source="MenuButtonStyle.xaml" />
    </UserControl.Resources>
    <StackPanel>
        <TextBlock FontSize="15" Foreground="White" HorizontalAlignment="Center">Menu</TextBlock>
        <Button Style="{StaticResource ButtonMenu}" Height="35" Width="90" Background="	#B0C4DE" Margin="2,5,3,5">Widok miesiąca</Button>
        <Button Style="{StaticResource ButtonMenu}" Height="35" Width="90" Background="	#B0C4DE" Margin="2,5,3,5">Widok tygodnia</Button>
        <Button Style="{StaticResource ButtonMenu}" Height="35" Width="90" Background="	#B0C4DE" Margin="2,5,3,5">Widok dnia</Button>
    </StackPanel>
</UserControl>
