<UserControl x:Class="ClientUI.EntryControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="clr-namespace:ClientUI"
    xmlns:clientapp="clr-namespace:ClientApp;assembly=ClientApp"
    x:Name="Me"             
    >
    <Border BorderBrush="Blue">
        <StackPanel Orientation="Vertical">
            <TextBlock Text="{Binding ElementName=Me, Path=Entry.Title}"/>
            <TextBlock Text="{Binding ElementName=Me, Path=Entry.Desc}"/>
        </StackPanel>
    </Border>
</UserControl>
